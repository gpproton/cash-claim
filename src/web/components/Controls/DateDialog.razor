@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public DateRange DateRange { get; set; } = WebConst.AppDateRange;

    void Submit() {
        MudDialog.Close(DialogResult.Ok(DateRange));
    }

}

<MudDialog>
    <TitleContent>
        <MudText Align="Align.Center" Typo="Typo.h5">@MudDialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        <div class="pa-2">
            <MudDateRangePicker DateFormat="dd-MMM-yyyy" TitleDateFormat="dddd, dd. MMMM" @bind-DateRange="DateRange"/>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Size="Size.Large" Class="px-12 py-3">Select</MudButton>
    </DialogActions>
</MudDialog>