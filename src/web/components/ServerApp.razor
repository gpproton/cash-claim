@using System.Reflection
@code {
    private void OnNavigateAsync() { }

    private readonly Assembly _rootAssembly = typeof(ServerApp).Assembly;
    private readonly Assembly[] _extraAssembly = { typeof(MainLayout).Assembly };
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <title>x-claim</title>
    <base href="/" />
    <link rel="_content/XClaim.Web.Components/lib/roboto/latin.css" />
    <link
      rel="icon"
      type="image/png"
      href="_content/XClaim.Web.Components/favicon.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="512x512"
      href="_content/XClaim.Web.Components/icon-512.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="192x192"
      href="_content/XClaim.Web.Components/icon-192.png"
    />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="_content/XClaim.Web.Components/css/app.css" rel="manifest" />
    <link href="XClaim.Service.styles.css" rel="stylesheet" />
    <HeadOutlet />
  </head>

  <body>
  <RootWrapper>
      <CascadingAuthenticationState>
          <Router
              AppAssembly="@_rootAssembly"
              AdditionalAssemblies="@_extraAssembly"
              OnNavigateAsync="OnNavigateAsync">
              <Found Context="routeData">
                  <RouteView
                      RouteData="@routeData"
                      DefaultLayout="@typeof(MainLayout)"/>
                  <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
              </Found>
              <NotFound>
                  <PageTitle>Not found</PageTitle>
                  <LayoutView Layout="@typeof(MainLayout)">
                      <p role="alert">Sorry, there's nothing at this address.</p>
                  </LayoutView>
              </NotFound>
          </Router>
      </CascadingAuthenticationState>
  </RootWrapper>

    <script src="_framework/blazor.web.js" suppress-error="BL9992"></script>
  </body>
</html>


