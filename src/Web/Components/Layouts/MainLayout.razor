@inherits LayoutComponentBase
@layout RootLayout

@code {

    [CascadingParameter]
    RootLayout Layout { get; set; } = default!;
    private bool _sidebarOpen = true;

    private async Task ToggleTheme(MudTheme changedTheme) => await Layout.SetTheme(changedTheme);
    private void ToggleSidebar() => _sidebarOpen = !_sidebarOpen;
}

<AppBar OnSidebarToggled="ToggleSidebar" OnThemeToggled="ToggleTheme" />
<NavMenu SideBarOpen="_sidebarOpen" />
<MudMainContent Class="pt-16 px-sm-0 px-md-12">
    <MudContainer Class="mt-6">
        @Body
    </MudContainer>
</MudMainContent>