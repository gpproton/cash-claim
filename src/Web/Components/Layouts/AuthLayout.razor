@inherits LayoutComponentBase
@inject AuthState AuthState

@code {
    void SignIn() => AuthState.TriggerApiAuth();
    async Task SignOut() => await AuthState.TriggerSignOut();
}

<MudAppBar Elevation="1">
    <MudText Typo="Typo.h5" Class="ml-3">X-Claim</MudText>
    <MudSpacer />
    <AuthorizeView>
        <Authorized>
            <MudButton Variant="Variant.Outlined" Class="px-12 px-4 white text-indigo" Size="Size.Large" OnClick="SignOut">Sign Out</MudButton>
        </Authorized>
        <NotAuthorized>
            <MudButton Variant="Variant.Outlined" Class="px-12 px-4 white text-indigo" Size="Size.Large" OnClick="SignIn">Sign In</MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudAppBar>
<MudMainContent>
    <MudContainer>
        @Body
    </MudContainer>
</MudMainContent>