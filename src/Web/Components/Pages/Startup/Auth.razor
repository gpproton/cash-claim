@inject NavigationManager Nav
@page "/app/auth"

@code {
    private void BackHome() => Nav.NavigateTo(WebConst.AppHome);
}

<Title>Sign In</Title>

<MudStack Spacing="10" Justify="Justify.Center" AlignItems="AlignItems.Center" Style="min-height: calc(100vh - 168px)">
    <MudImage ObjectFit="ObjectFit.Contain" Style="max-height: calc(75vh)" Fluid="true" Src="_content/XClaim.Web.Components/vectors/auth.svg" Alt="Sign In"/>
    <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
        <MudButton OnClick="BackHome" Variant="Variant.Outlined" Color="Color.Primary" Class="px-16 py-4">Home</MudButton>
    </MudStack>
</MudStack>