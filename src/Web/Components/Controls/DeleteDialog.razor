@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;
    
    void Submit(bool ans) {
        MudDialog.Close(DialogResult.Ok(ans));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Align="Align.Center" Typo="Typo.h5">@MudDialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Class="pb-4" Row="true" Justify="Justify.Center">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Primary" Style="font-size: 7rem;"/>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudStack Spacing="10" Row="true" Justify="Justify.SpaceBetween">
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="() => Submit(false)" Size="Size.Small" Class="px-12 py-3">No</MudButton>
            <MudButton Color="Color.Primary" Variant="Variant.Text" OnClick="() => Submit(true)" Size="Size.Small" Class="px-12 py-3">Yes</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>