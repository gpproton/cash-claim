<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">Select</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter]
    public DateRange DateRange { get; set; } = new (DateTime.Now.AddDays(-7).Date, DateTime.Now.Date);

    [Parameter] public string ContentText { get; set; } = string.Empty;

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}