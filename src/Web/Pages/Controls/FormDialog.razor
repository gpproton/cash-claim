@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;
    
    [Parameter]
    public int DefaultValue { get; set; } = -1;

    void Submit() => MudDialog.Close(DialogResult.Ok(DefaultValue));
}

<MudDialog>
    <TitleContent>
        <MudText Align="Align.Center" Typo="Typo.h5">@MudDialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        <div class="pa-2"></div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Size="Size.Large" Class="px-10">Submit</MudButton>
    </DialogActions>
</MudDialog>