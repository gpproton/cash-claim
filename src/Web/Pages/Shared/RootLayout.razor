@inherits LayoutComponentBase

@code {
    MudTheme _currentTheme = new();

    public async Task SetTheme(MudTheme themeValue) => await Task.FromResult(_currentTheme = themeValue);
}

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingValue Value="this">
<MudLayout>@Body</MudLayout>
</CascadingValue>