<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="assets/logo.svg" />
        <MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">X-Claim</MudText>
    </MudDrawerHeader>
    <MudDivider Class="my-4" />
    <MudNavMenu>
        @foreach (var link in _links)
        {
            <MudNavLink Href="@link.Path" Icon="@link.Icon">@link.Title</MudNavLink>
        }
    </MudNavMenu>
</MudDrawer>

@code {

    [Parameter]
    public bool SideBarOpen { get; set; } = true;

    record MenuLink(string Title, string Icon, string Path);

    private List<MenuLink> _links = new() {
        new MenuLink("Overview", Icons.Material.Filled.Dashboard, "/app/overview"),
        new MenuLink("Transactions", Icons.Material.Filled.SendTimeExtension, "/app/transactions"),
        new MenuLink("Claims", Icons.Material.Filled.Money, "/app/claims"),
        new MenuLink("Payments", Icons.Material.Filled.CreditCard, "/app/payments")
    };
}