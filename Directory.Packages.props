<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <!-- Shared packages -->
  <ItemGroup>
    <PackageVersion Include="Ardalis.SmartEnum" Version="$(ArdalisVersion)" />
    <PackageVersion Include="Ardalis.SmartEnum.SystemTextJson" Version="$(ArdalisVersion)" />
    <PackageVersion Include="Ardalis.Specification" Version="$(ArdalisVersion)" />
    <PackageVersion Include="Nextended.Core" Version="$(NextendedVersion)" />
  </ItemGroup>

  <!-- EFCore packages -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.EntityFrameworkCore" Version="$(EfcoreVersion)" />
    <PackageVersion Include="Microsoft.EntityFrameworkCore.Design" Version="$(EfcoreVersion)" />
    <PackageVersion Include="Microsoft.EntityFrameworkCore.Sqlite" Version="$(EfcoreVersion)" />
  </ItemGroup>

  <!-- Razor packages -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.AspNetCore.Components.Web" Version="$(AspCoreVersion)" />
  </ItemGroup>

  <!-- Asp.net packages -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.AspNetCore.OpenApi" Version="$(AspCoreVersion)" />
    <PackageVersion Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    <PackageVersion Include="CoreAdmin" Version="2.7.0" />
    <PackageVersion Include="Microsoft.AspNetCore.Components.Web" Version="$(AspCoreVersion)" />
    <PackageVersion Include="Microsoft.AspNetCore.Components.WebAssembly" Version="$(AspCoreVersion)" />
    <PackageVersion Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="$(AspCoreVersion)" />
    <PackageVersion Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="$(AspCoreVersion)" />
  </ItemGroup>

  <!-- Proton.Common packages -->
  <ItemGroup>
    <PackageVersion Include="Proton.Common" Version="$(ProtonVersion)" />
    <PackageVersion Include="Proton.Common.Http" Version="$(ProtonVersion)" />
    <PackageVersion Include="Proton.Common.AspNet" Version="$(ProtonVersion)" />
    <PackageVersion Include="Proton.Common.EFCore" Version="$(ProtonVersion)" />
    <PackageVersion Include="Proton.Common.Razor" Version="$(ProtonVersion)" />
  </ItemGroup>

  <!-- Test packages -->
  <ItemGroup>
    <PackageVersion Include="AutoFixture" Version="4.11.0" />
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.5.0" />
    <PackageVersion Include="Microsoft.AspNetCore.Mvc.Testing" Version="$(DotnetVersion)" />
    <PackageVersion Include="xunit" Version="2.4.2" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="2.4.5" />
    <PackageVersion Include="coverlet.collector" Version="3.2.0" />
  </ItemGroup>
</Project>
