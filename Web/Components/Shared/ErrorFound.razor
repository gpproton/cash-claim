@inject NavigationManager Nav
@code {
    private void BackHome() => Nav.NavigateTo(WebConst.AppHome);
}

<MudStack Spacing="10" Justify="Justify.Center" AlignItems="AlignItems.Center" Style="min-height: calc(100vh - 200px)">
    <MudImage ObjectFit="ObjectFit.Contain" Style="max-height: calc(75vh)" Fluid="true" Src="_content/XClaim.Web.Components/vectors/404.svg" Alt="404"/>
    <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center">
        <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Primary" Class="my-8">Page Not Found</MudText>
        <MudButton OnClick="BackHome" Variant="Variant.Outlined" Color="Color.Primary" Class="px-16 py-4">Home</MudButton>
    </MudStack>
</MudStack>